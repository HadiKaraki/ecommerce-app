<% layout('layouts/boilerplate')%>

    <head>
        <meta charset="utf-8">
        <title>Edit product</title>
        <link rel="stylesheet" href="../../Editproduct.css">
        <link rel="stylesheet" href="../../Navbar.css">
        <link rel="stylesheet" href="../../Footer.css">
    </head>

    <body>
        <div class="center">
            <h1>Edit product</h1>
            <form action="/product/edit/<%= product._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="txt_field">
                    <span>Name</span>
                    <input type="text" name="product[name]" value="<%= product.name %> ">
                </div>
                <div class="txt_field">
                    <span>Brand</span>
                    <input type="text" name="product[brand]" value="<%= product.brand %>">
                </div>
                <div class="txt_field">
                    <span>Price</span>
                    <input type="text" name="product[price]" value="<%= product.price %>">
                </div>
                <div class="txt_field">
                    <span>Description</span>
                    <input type="text" name="product[description]" value="<%= product.description %>">
                </div>
                <div class="txt_field">
                    <span>Code</span>
                    <input type="text" name="product[code]" value="<%= product.code %>">
                </div>
                <div class="txt_field">
                    <span>Nb in stock</span>
                    <input type="text" name="product[nb_in_stock]" value="<%= product.nb_in_stock %>">
                </div>
                <div class="select_field">
                    <span>Available or no</span>
                    <select name="product[in_stock]">
                        <option selected disabled>
                            <%= product.in_stock %>
                        </option>
                        <option>true</option>
                        <option>false</option>
                    </select>
                </div>
                <div class="select_field">
                    <span>Category</span>
                    <select name="product[category]">
                        <option selected disabled>
                            <%= product.category %>
                        </option>
                        <option>TV</option>
                        <option>MOBILE</option>
                        <option>APPLIANCE</option>
                        <option>CAMERA</option>
                        <option>GAMING</option>
                        <option>LAPTOP</option>
                    </select>
                </div>
                <div class="file_field">
                    <span>Add more image(s)..</span>
                    <input type="file" id="image" name="image" multiple>
                </div>
                <div class="delete_images_field">
                    <% product.images.forEach(function(img, i) { %>
                        <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                        <% })%>
                </div>
                <input type="submit" value="Edit product">
            </form>
        </div>

    </body>