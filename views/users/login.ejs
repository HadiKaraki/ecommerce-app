<% layout('layouts/boilerplate')%>

    <head>
        <meta charset="utf-8">
        <title>Login</title>
        <link rel="stylesheet" href="../Login.css">
    </head>

    <body>
        <div class="center">
            <div class="back-button">
                <button type="button" style="border: none; display: inline;" onclick="history.go(-1)"><i
                        class="fa fa-arrow-left" aria-hidden="true"></i> Back</button>
            </div>
            <h1>Login</h1>
            <form action="/user/login" method="POST">
                <div class="txt_field">
                    <input type="text" id="username" name="username" autofocus required>
                    <span></span>
                    <label>Username</label>
                </div>
                <div class="txt_field">
                    <input type="password" id="password" name="password" autofocus required>
                    <span></span>
                    <label>Password</label>
                </div>
                <div class="pass"><a href="/user/forgotpassword">Forgot Password?</a></div>
                <input type="submit" value="Login">
                <div class="signup_link">
                    Not a member? <a href="/user/register">Signup</a>
                </div>
            </form>
        </div>

    </body>

    </html>