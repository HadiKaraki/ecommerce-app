<% layout('layouts/boilerplate')%>

    <head>
        <meta charset="UTF-8">
        <title>Buy4Less</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <link rel="stylesheet" href="../Home.css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    </head>
    <h1 id="shop-by" style="margin-bottom: 20px;">Products</h1>
    <section id="carWithRec">
        <div id="carousel-image">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="width: 100%; margin: 0 auto;">
                <div class="carousel-inner">
                    <% for(let i=0; i<products.length; i++) {%>
                        <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                            <a href="/product/<%= products[i].id %> ">
                                <img src="<%= products[i].images[0].url%>" class="d-block w-100">
                            </a>
                            <div class="carousel-caption d-none d-md-block">
                                <h5 style="color: red">
                                    <%= products[i].name %>
                                </h5>
                            </div>
                        </div>
                        <% } %>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div id="recomended">
            <img class="watermark" src="https://res.cloudinary.com/dvxvgwx9m/image/upload/v1660743467/Ecommerce/gyrpzvotuyk5dwzx9gdv.jpg">
        </div>
    </section>
    
